@model CoreIdentityWithMongoDB.Models.User

@{
    ViewData["Title"] = "Kayıt ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-wrapper">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="logo">
                    <img src="~/dist/images/logo-black.png" alt="logo">
                </div>
                <div class="my-5 text-center">
                    <h3 class="font-weight-bold">Kayıt Ol</h3>
                    <p class="text-muted">Şimdi ücretsiz bir hesap oluştur.</p>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
                }
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="form-icon-wrapper">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Kullancı adı" autofocus>
                            <i class="form-icon-left mdi mdi-account"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-icon-wrapper">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
                            <i class="form-icon-left mdi mdi-email"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-icon-wrapper">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Parola">
                            <i class="form-icon-left mdi mdi-lock"></i>
                            <a href="#" class="form-icon-right password-show-hide"
                               title="Parolayı göster">
                                <i class="mdi mdi-eye"></i>
                            </a>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit">Kayıt Ol</button>
                    </div>
                    <div class="text-center">
                        Zaten hesabın var mı? <a href="../Account/Login">Giriş Yap</a>.
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-4 offset-md-4">
                <div class="text-divider">ya da</div>
            </div>
        </div>
        <div class="social-links justify-content-center">
            <a href="#">
                <i class="mdi mdi-google"></i>
            </a>
            <a href="#">
                <i class="mdi mdi-facebook"></i>
            </a>
            <a href="#">
                <i class="mdi mdi-twitter"></i>
            </a>
            <a href="#">
                <i class="mdi mdi-github"></i>
            </a>
        </div>
    </div>
</div>